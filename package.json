{
  "name": "dash",
  "version": "1.3.84",
  "main": "electron-main.js",
  "description": "Dash â€“ a private, offline-first notes app built with Electron + Next.js + Editor.js.",
  "author": "Filmshape Ltd",
  "keywords": [
    "notes",
    "note-taking",
    "privacy",
    "offline",
    "encryption",
    "electron",
    "rich-text",
    "markdown",
    "cross-platform",
    "security"
  ],
  "homepage": "https://github.com/Efesop/rich-text-editor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Efesop/rich-text-editor.git"
  },
  "bugs": {
    "url": "https://github.com/Efesop/rich-text-editor/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -c electron-builder.yml --mac --windows --linux",
    "build:mac": "next build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -c electron-builder.yml --mac",
    "build:mac:unsigned": "next build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -c electron-builder-unsigned.yml --mac",
    "release:mac": "next build && electron-builder -c electron-builder.yml --mac --publish always",
    "build:signed": "next build && electron-builder -c electron-builder.yml --mac --windows --linux",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron-pack": "npm run build && electron-builder build --win --mac --linux",
    "electron-start": "electron .",
    "electron:build": "next build && electron-builder build --win --mac --linux",
    "dist": "next build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -c electron-builder.yml --mac --windows --linux",
    "release": "next build && electron-builder -c electron-builder.yml --mac --windows --linux --publish always",
    "build:pwa": "DEPLOY_TARGET=github next build",
    "export": "next export"
  },
