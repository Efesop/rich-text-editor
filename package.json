{
  "name": "Dash",
  "version": "1.2.83",
  "private": true,
  "main": "electron-main.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "next build",
    "dist": "electron-builder --mac",
    "release": "electron-builder --mac --publish always",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder build --win --mac --linux",
    "electron-start": "electron .",
    "electron:build": "electron-builder build --win --mac --linux"
  },
  "dependencies": {
    "@editorjs/checklist": "^1.6.0",
    "@editorjs/code": "^2.9.0",
    "@editorjs/delimiter": "^1.4.2",
    "@editorjs/editorjs": "^2.30.6",
    "@editorjs/embed": "^2.7.4",
    "@editorjs/header": "^2.8.7",
    "@editorjs/image": "^2.9.3",
    "@editorjs/inline-code": "^1.5.1",
    "@editorjs/link": "^2.6.2",
    "@editorjs/list": "^1.10.0",
    "@editorjs/marker": "^1.4.0",
    "@editorjs/nested-list": "^1.4.3",
    "@editorjs/paragraph": "^2.11.6",
    "@editorjs/quote": "^2.7.2",
    "@editorjs/table": "^2.4.1",
    "@octokit/rest": "^21.0.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "csv-stringify": "^6.5.1",
    "date-fns": "^4.1.0",
    "docx": "^8.5.0",
    "dotenv": "^16.4.5",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.3.4",
    "html2pdf.js": "^0.10.2",
    "lucide-react": "^0.441.0",
    "next": "^13.0.0",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "xmlbuilder2": "^3.1.1",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.11",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "react-hooks/exhaustive-deps": "off"
  },
  "build": {
    "appId": "com.filmshape.dash",
    "productName": "Dash",
    "files": [
      "out/**/*",
      "electron-main.js",
      "preload.js"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icons/Dashmac1024.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Efesop",
        "repo": "rich-text-editor"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Efesop/rich-text-editor.git"
  }
}
